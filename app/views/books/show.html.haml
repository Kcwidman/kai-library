%h1.my-3.text-center= @book.title
%p
  %strong Price:
  -if @book.price
    $#{@book.price}
  -else
    = "\"Priceless\""
  %br
  %strong Subject:
  -if @book.subject
    = link_to @book.subject.name, subject_path(@book.subject)
  -else
    = "No Subject"
  %br
  %strong Created Date:
  = @book.created_at
  %br
%strong Description: 
%hr
%p= @book.description
%hr
.mr-3.btn.btn-sm.btn-primary= link_to 'Back', books_path, :class => "btn text-light"
.mr-3.btn.btn-sm.btn-primary= link_to 'Edit', edit_book_path(@book), :class => "btn text-light"
.mr-3.btn.btn-sm.btn-primary= link_to 'Delete', book_path(@book), method: :delete, data: {confirm: "Are you sure?"}, :class => "btn text-light"
